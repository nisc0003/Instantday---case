---
import PhotoCard from "./PhotoCard.astro"

export interface Photo {
  src: string
  title: string
  by: string
  description: string
}

export interface Props { photos: Photo[] }
const { photos } = Astro.props
---

<!-- MOBILE: horizontal scroll -->
<section class="flex gap-2 overflow-x-auto md:hidden">
  {photos.map((p) => (
    <div class="min-w-[50%] flex-shrink-0">
      <PhotoCard {...p} />
    </div>
  ))}
</section>

<!-- DESKTOP: masonry columns (no big vertical gaps) -->
<section class="mt-8 hidden md:block">
    <div class="grid gap-4 
                sm:grid-cols-2 
                lg:grid-cols-3 
                xl:grid-cols-4">
      {photos.map((p) => (
        <PhotoCard {...p} />
      ))}
    </div>
  </section>