---
import PhotoCard from "./PhotoCard.astro"

export interface Photo {
  src: string
  title: string
  by: string
  description: string
}

export interface Props { photos: Photo[] }
const { photos } = Astro.props
---

<!-- Arrow above mobile gallery -->
<div class="flex justify-end mb-2 pb-4 md:hidden px-4">
<img src="/images/arrow.svg" alt="arrow pointing right"/>
</div>

<section class="flex gap-2 overflow-x-auto md:hidden">
  {photos.map((p) => (
    <div class="min-w-[50%] flex-shrink-0">
      <PhotoCard {...p} />
    </div>
  ))}
</section>


<section class="mt-8 hidden md:block">
    <div class="grid gap-4 
                sm:grid-cols-2 
                lg:grid-cols-3 
                xl:grid-cols-4">
      {photos.map((p) => (
        <PhotoCard {...p} />
      ))}
    </div>
  </section>