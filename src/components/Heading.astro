---
const {
  htmlheading = "h2",
  font = "poller",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

const sizeClasses = {
  h1: "text-[45px] md:text-[96px] font-bold",
  h2: "text-[37px] md:text-[80px] font-bold",
  h3: "text-[24px] md:text-[44px] font-bold",
  hero: "text-[clamp(1rem,30vw,20vw)] md:text-[clamp(1rem,30vw,20vw)]",
};

const fontClasses = {
  header: "font-hero",
};
---

<Htmlheading
  class:list={[stylingclasses, sizeClasses[htmlheading], fontClasses[font]]}
>
  <slot />
</Htmlheading>
