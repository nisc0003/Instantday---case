---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Judges from "../components/judges.astro";
---

<MainLayout title="Information">
  <div class="relative">
    <!-- Vertical lines -->
    <div class="absolute right-2 md:right-6 top-0 w-4 md:w-8 h-full bg-blue"></div>
    <div class="absolute right-8 md:right-20 top-0 w-4 md:w-8 h-full bg-black"></div>
    <div class="absolute right-14 md:right-34 top-0 w-4 md:w-8 h-full bg-pink"></div>
    <div class="absolute right-20 md:right-48 top-0 w-4 md:w-8 h-full bg-orange"></div>

    <!-- Content -->
    <div class="relative z-10">
      
      <!-- Who are we? section -->
      <section class="grid grid-cols-4 md:grid-cols-12 mx-[20px] md:mx-[100px]mx-[20px]">
        <h1 class="font-bold text-5xl md:text-8xl col-span-3 md:col-span-7 md:mt-20">Who are we?</h1>
        <img class="col-start-3 md:col-start-8 col-span-1 md:col-span-3 w-full h-70" src="/images/info.svg" alt="tegning der tænker">
        <div class="col-start-1 col-span-3 md:col-span-7">
          <Text class="brødtekst">Instant Day is a small project run by a couple of lecturers from the Multimedia Design programme at EK - Business Academy Copenhagen. Instant Day is a bi-annual project where lecturers and students collaborate on a digital design and communication project related to the Instant Day competition (this website). In essence, we just want to promote instant photography and have fun while doing it. Cheers.</Text>
        </div>
      </section>
      
      <!-- Horizontal line -->
      <div class="w-50 md:w-300 h-4 md:h-8 bg-orange my-8 animate-[slide-in_0.5s_ease-out_forwards]"></div>

      <!-- Rest of your sections -->
      <!-- _________________________________________________The judges_section_________________________________________________ -->
      <section class="md:my-50 relative overflow-hidden grid grid-cols-4 md:grid-cols-12 md:mx-[100px] mx-[20px]">
        <div class="relative z-20 col-span-4 md:col-span-6 md:col-start-4">
          <h2 class="text-3xl md:text-8xl font-bold">The judges</h2>
          <Text class="brødtekst md:text-center">Submissions will be reviewed by:</Text>
        </div>

        <div class="relative h-[450px] md:h-[500px] overflow-hidden col-span-4 md:col-span-10 col-start-1 row-start-2">
          <div class="transform scale-50 md:scale-100 origin-center">
            <Judges class="md:mt-20" />
          </div>
        </div>

        <div class="relative z-20 col-span-3 md:col-span-7 md:ml-0 row-start-3">
          <ul class="space-y-2 pl-6 md:pl-2 mt-10 md:mt-20">
            <li>
              <Text>Jonas Hasle (Assistant lecturer, Multimedia Design programme at EK)</Text>
            </li>
            <li>
              <Text>Birgitte Holmboe (Lecturer, Multimedia Design programme at EK)</Text>
            </li>
            <li>
              <Text>Anders Braad (Lecturer, Multimedia Design programme at EK)</Text>
            </li>
            <li>
              <Text>Stefan Grage (Assistant lecturer, Multimedia Design programme at EK)</Text>
            </li>
          </ul>
        </div>
      </section>
      <!-- _________________________________________________The sponsors_section_________________________________________________ -->
      <section class="bg-blue text-primary mt-15 p-4">
        <div class="grid grid-cols-4 md:grid-cols-12 gap-4">
          <h2 class="text-5xl md:text-8xl font-bold col-span-4 md:col-span-12">Sponsors</h2>
          <div class="col-span-4 md:col-span-8">
            <Text>
              Instant Day is not affiliated to any companies within the Instant Photography industry. The only organisation backing us is EK - Business Academy Copenhagen. 
              At least so far;-) 
            </Text>
          </div>
          <div class="col-span-4 md:col-span-8 mt-4">
            <Link variant="primary" href="https://www.ek.dk/">www.ek.dk</Link>
          </div>
        </div>
      </section>
    </div>
  </div>
</MainLayout>
<style>
  @keyframes slide-in {
    from { transform: translateX(-100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  </style>